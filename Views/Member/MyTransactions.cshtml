@model IEnumerable<SaccoShareManagementSys.Models.ShareTransaction>?
@{
    ViewData["Title"] = "My Transactions";
    Layout = "_Layout";
}

<h3>My Transactions</h3>

<div class="mb-3">
    <a class="btn btn-secondary" href="/Member/Index">Back</a>
</div>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No transactions found.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount (KES)</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TransactionDate.ToShortDateString()</td>
                    <td>@t.TransactionType</td>
                    <td>@t.Amount</td>
                    <td>@t.Description</td>
                </tr>
            }
        </tbody>
    </table>
}