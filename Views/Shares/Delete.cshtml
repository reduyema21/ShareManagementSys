@model SaccoShareManagementSys.Models.Share
@{
    ViewData["Title"] = "Delete Share Certificate";
}

<div class="container-fluid">
    <h2>Delete Share Certificate</h2>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Are you sure you want to delete this share certificate? This action cannot be undone.
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Shareholder</dt>
                <dd class="col-sm-9">@Model.Shareholder?.FullName (#@Model.ShareholderId.ToString("D4"))</dd>

                <dt class="col-sm-3">Certificate Number</dt>
                <dd class="col-sm-9">@Model.CertificateNumber</dd>

                <dt class="col-sm-3">Share Type</dt>
                <dd class="col-sm-9">@Model.ShareType</dd>

                <dt class="col-sm-3">Number of Shares</dt>
                <dd class="col-sm-9">@Model.NumberOfShares.ToString("N2")</dd>

                <dt class="col-sm-3">Share Value (KES)</dt>
                <dd class="col-sm-9">@Model.ShareValue.ToString("N2")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ShareId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>


