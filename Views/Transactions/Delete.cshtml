@model SaccoShareManagementSys.Models.ShareTransaction
@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h2>Delete Transaction</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-2"></i>Back to List</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="text-danger mb-3">Are you sure you want to delete this transaction?</h5>

            <dl class="row">
                <dt class="col-sm-3">Transaction ID</dt>
                <dd class="col-sm-9">#@Model.TransactionId.ToString("D4")</dd>

                <dt class="col-sm-3">Shareholder</dt>
                <dd class="col-sm-9">@Model.Share?.Shareholder?.FullName</dd>

                <dt class="col-sm-3">Share Certificate</dt>
                <dd class="col-sm-9">@Model.Share?.CertificateNumber</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.TransactionType</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">KES @Model.Amount.ToString("N2")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.TransactionId" method="post">
                <input type="hidden" asp-for="TransactionId" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-2"></i>Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>