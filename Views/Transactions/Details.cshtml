@model SaccoShareManagementSys.Models.ShareTransaction
@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h2>Transaction Details</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-2"></i>Back to List</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Transaction ID</dt>
                <dd class="col-sm-9">#@Model.TransactionId.ToString("D4")</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.TransactionDate.ToString("dd MMM yyyy hh:mm tt")</dd>

                <dt class="col-sm-3">Shareholder</dt>
                <dd class="col-sm-9">@Model.Share?.Shareholder?.FullName</dd>

                <dt class="col-sm-3">Share Certificate</dt>
                <dd class="col-sm-9">@Model.Share?.CertificateNumber</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.TransactionType</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">KES @Model.Amount.ToString("N2")</dd>

                <dt class="col-sm-3">Payment Method</dt>
                <dd class="col-sm-9">@Model.PaymentMethod ?? "-"</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Model.Notes ?? "-"</dd>
            </dl>
        </div>
    </div>
</div>